def choice ():
    while True:
        symb = str(input('Choose between X or O for the player 1: ')).upper()
        if symb == 'X':
            symbol = ('X', 'O')
            break
        elif symb == 'O':
            symbol = ('O', 'X')
            break
        else:
            print ('Invalid symbol.')
            
    return symbol

